		label = "TD_OPTCONT";
		#binding-cells = <0>;
		tapping-term-ms = <200>;
		bindings = <&kp LALT>, <&kp LCTRL>;
	};
		par: parenthesis_tap_dance {
		compatible = "zmk,behavior-tap-dance";
		label = "TD_PAR";
		#binding-cells = <0>;
		tapping-term-ms = <200>;
		bindings = <&kp LPAR>, <&kp RPAR>;
	};
	sqr: sqrbracket_tap_dance {
		compatible = "zmk,behavior-tap-dance";
		label = "TD_SQR";
		#binding-cells = <0>;
		tapping-term-ms = <200>;
		bindings = <&kp LBKT>, <&kp RBKT>;
	};
	ptd: ptdbracket_tap_dance {
		compatible = "zmk,behavior-tap-dance";
		label = "TD_PTD";
		#binding-cells = <0>;
		tapping-term-ms = <200>;
		bindings = <&kp LESS_THAN>, <&kp GREATER_THAN>;
	};
	crly: crlybracket_tap_dance {
		compatible = "zmk,behavior-tap-dance";
		label = "TD_CRLY";
		#binding-cells = <0>;
		tapping-term-ms = <200>;
		bindings = <&kp LBRC>, <&kp RBRC>;
	};
	accent: accent_tap_dance {
		compatible = "zmk,behavior-tap-dance";
		label = "TD_ACNT";
		#binding-cells = <0>;
		tapping-term-ms = <200>;
		bindings = <&kp GRAVE>, <&kp LS(GRAVE)>;
	};
    };

